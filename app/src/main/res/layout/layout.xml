<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent" android:layout_height="match_parent">

<LinearLayout
    android:orientation="vertical"
    android:paddingBottom="30dip"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/feedbackLayout1"
        android:orientation="horizontal"
        android:paddingLeft="20dip"
        android:paddingRight="10dip"
        android:layout_width="match_parent"
        android:layout_height="50dip">
        <ImageView
            android:background="@drawable/app_login_remember_unsel"
            android:layout_centerVertical="true"
            android:layout_width="20dip"
            android:layout_height="20dip" />
        <TextView
            android:text="出现异常退出"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dip"
            android:textColor="@color/hard_gray"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <RelativeLayout
        android:id="@+id/feedbackLayout2"
        android:orientation="horizontal"
        android:paddingLeft="20dip"
        android:paddingRight="10dip"
        android:layout_width="match_parent"
        android:layout_height="50dip">
        <ImageView
            android:background="@drawable/app_login_remember_unsel"
            android:layout_centerVertical="true"
            android:layout_width="20dip"
            android:layout_height="20dip" />
        <TextView
            android:text="出现卡顿或黑屏"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dip"
            android:textColor="@color/hard_gray"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <RelativeLayout
        android:id="@+id/feedbackLayout3"
        android:orientation="horizontal"
        android:paddingLeft="20dip"
        android:paddingRight="10dip"
        android:layout_width="match_parent"
        android:layout_height="50dip">
        <ImageView
            android:background="@drawable/app_login_remember_unsel"
            android:layout_centerVertical="true"
            android:layout_width="20dip"
            android:layout_height="20dip" />
        <TextView
            android:text="启动速度慢"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dip"
            android:textColor="@color/hard_gray"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <RelativeLayout
        android:id="@+id/feedbackLayout4"
        android:orientation="horizontal"
        android:paddingLeft="20dip"
        android:paddingRight="10dip"
        android:layout_width="match_parent"
        android:layout_height="50dip">
        <ImageView
            android:background="@drawable/app_login_remember_unsel"
            android:layout_centerVertical="true"
            android:layout_width="20dip"
            android:layout_height="20dip" />
        <TextView
            android:text="耗手机内存"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dip"
            android:textColor="@color/hard_gray"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <RelativeLayout
        android:id="@+id/feedbackLayout5"
        android:orientation="horizontal"
        android:paddingLeft="20dip"
        android:paddingRight="10dip"
        android:layout_width="match_parent"
        android:layout_height="50dip">
        <ImageView
            android:background="@drawable/app_login_remember_unsel"
            android:layout_centerVertical="true"
            android:layout_width="20dip"
            android:layout_height="20dip" />
        <TextView
            android:text="操作不流畅"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dip"
            android:textColor="@color/hard_gray"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <RelativeLayout
        android:id="@+id/feedbackLayout6"
        android:orientation="horizontal"
        android:paddingLeft="20dip"
        android:paddingRight="10dip"
        android:layout_width="match_parent"
        android:layout_height="50dip">
        <ImageView
            android:background="@drawable/app_login_remember_unsel"
            android:layout_centerVertical="true"
            android:layout_width="20dip"
            android:layout_height="20dip" />
        <TextView
            android:text="定位错误"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dip"
            android:textColor="@color/hard_gray"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <RelativeLayout
        android:id="@+id/feedbackLayout7"
        android:orientation="horizontal"
        android:paddingLeft="20dip"
        android:paddingRight="10dip"
        android:layout_width="match_parent"
        android:layout_height="50dip">
        <ImageView
            android:background="@drawable/app_login_remember_unsel"
            android:layout_centerVertical="true"
            android:layout_width="20dip"
            android:layout_height="20dip" />
        <TextView
            android:text="预报数据不准确"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dip"
            android:textColor="@color/hard_gray"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <TextView
        android:text="其他建议"
        android:layout_marginTop="15dip"
        android:layout_marginLeft="20dip"
        android:textColor="@color/hard_gray"
        android:gravity="center_vertical"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/feedbackEdt"
        android:background="@drawable/shape_grayframe_whitebg"
        android:padding="5dip"
        android:gravity="left|top"
        android:textSize="14sp"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="10dip"
        android:layout_width="match_parent"
        android:layout_height="100dip" />
    <Button
        android:id="@+id/feedbackBtn"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="20dip"
        android:text="提  交"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:background="@drawable/of_blue_btn"
        android:layout_width="match_parent"
        android:layout_height="45dip" />
</LinearLayout>
</ScrollView>