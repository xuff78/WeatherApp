<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical"
    android:background="@color/whitesmoke"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:text="常规设置"
        android:textColor="@color/hard_gray"
        android:gravity="center_vertical"
        android:paddingLeft="20dip"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="35dip" />
    <LinearLayout
        android:paddingBottom="15dip"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout
            android:orientation="horizontal"
            android:paddingLeft="20dip"
            android:paddingRight="10dip"
            android:layout_width="match_parent"
            android:layout_height="50dip">
            <ImageView
                android:background="@drawable/icon_location"
                android:layout_centerVertical="true"
                android:layout_width="26dip"
                android:layout_height="26dip" />
            <TextView
                android:text="自动定位"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dip"
                android:textColor="@color/hard_gray"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <weather.ppx.com.weatherapp.View.SlipButton
                android:id="@+id/btnLocation"
                android:layout_gravity="right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="75dip"
                android:layout_height="36dip" />
        </RelativeLayout>
        <View
            android:background="@color/light_gray"
            android:layout_width="match_parent"
            android:layout_height="1px"/>

            <RelativeLayout
                android:orientation="horizontal"
                android:paddingLeft="20dip"
                android:paddingRight="10dip"
                android:layout_width="match_parent"
                android:layout_height="50dip">
                <ImageView
                    android:background="@drawable/icon_notice"
                    android:layout_centerVertical="true"
                    android:layout_width="26dip"
                    android:layout_height="26dip" />
                <TextView
                    android:text="通知提醒"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40dip"
                    android:textColor="@color/hard_gray"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <weather.ppx.com.weatherapp.View.SlipButton
                    android:id="@+id/btnPush"
                    android:layout_gravity="right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="75dip"
                    android:layout_height="36dip" />
            </RelativeLayout>
            <View
                android:background="@color/light_gray"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

                <RelativeLayout
                    android:orientation="horizontal"
                    android:paddingLeft="20dip"
                    android:paddingRight="20dip"
                    android:layout_width="match_parent"
                    android:layout_height="50dip">
                    <ImageView
                        android:background="@drawable/icon_theme"
                        android:layout_centerVertical="true"
                        android:layout_width="26dip"
                        android:layout_height="26dip" />
                    <TextView
                        android:text="换肤"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="40dip"
                        android:textColor="@color/hard_gray"
                        android:gravity="center_vertical"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:id="@+id/bgImg2"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/theme2"
                        android:layout_width="45dip"
                        android:layout_height="45dip" />
                    <ImageView
                        android:id="@+id/bgImg1"
                        android:layout_marginRight="5dip"
                        android:layout_toLeftOf="@+id/bgImg2"
                        android:layout_centerVertical="true"
                        android:src="@drawable/theme1"
                        android:layout_width="45dip"
                        android:layout_height="45dip" />
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/themeChecked2"
                        android:layout_alignBottom="@+id/bgImg2"
                        android:layout_alignRight="@+id/bgImg2"
                        android:src="@drawable/theme_selected"
                        android:layout_width="15dip"
                        android:layout_height="15dip" />
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/themeChecked1"
                        android:layout_alignBottom="@+id/bgImg1"
                        android:layout_alignRight="@+id/bgImg1"
                        android:src="@drawable/theme_selected"
                        android:layout_width="15dip"
                        android:layout_height="15dip" />
                </RelativeLayout>
                <View
                    android:background="@color/light_gray"
                    android:layout_width="match_parent"
                    android:layout_height="1px"/>
        <RelativeLayout
            android:id="@+id/feedbackLayout"
            android:orientation="horizontal"
            android:paddingLeft="20dip"
            android:paddingRight="10dip"
            android:layout_width="match_parent"
            android:layout_height="50dip">
            <ImageView
                android:background="@drawable/s120"
                android:layout_centerVertical="true"
                android:layout_width="28dip"
                android:layout_height="28dip" />
            <TextView
                android:text="意见反馈"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dip"
                android:textColor="@color/hard_gray"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:background="@color/light_gray"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
    </LinearLayout>
</LinearLayout>
    <TextView
        android:text="版权所有“南京信大气象科技有限公司”"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dip"
        android:textColor="@color/hard_gray"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:paddingBottom="20dip"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>