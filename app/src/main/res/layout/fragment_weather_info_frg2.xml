<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical"
    android:paddingBottom="30dip"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="horizontal"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:paddingTop="10dp"
        android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView
            android:text="20:00发布"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_toLeftOf="@+id/block_white"
            android:src="@drawable/block_black"
            android:layout_width="20dip"
            android:layout_height="20dip" />
        <ImageView
            android:id="@+id/block_white"
            android:src="@drawable/block_white"
            android:layout_alignParentRight="true"
            android:layout_width="20dip"
            android:layout_height="20dip" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@drawable/ringbg"
            android:id="@+id/todayInfoLeft"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="170dip"
            android:layout_height="170dip">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/weather_sun_l"
                android:id="@+id/weatherIcon"
                android:layout_width="40dip"
                android:layout_height="40dip" />
            <TextView
                android:text="24°"
                android:textSize="50sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="3-4级"
                android:drawableLeft="@drawable/icon_wind"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="相对湿度4%"
                android:drawableLeft="@drawable/icon_dampness"
                android:gravity="center_vertical"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="-20dip"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/todayInfoLeft"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/topWeatherTime1"
                    android:src="@drawable/weather_sun_cloud_s"
                    android:layout_width="26dip"
                    android:layout_height="26dip" />
                <TextView
                    android:text="05:00 多云"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dip"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/topWeatherTime2"
                    android:src="@drawable/weather_sun_s"
                    android:layout_width="26dip"
                    android:layout_height="26dip" />
                <TextView
                    android:text="05:00  晴"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dip"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/topWeatherTime3"
                android:src="@drawable/weather_sun_cloud_s"
                android:layout_width="26dip"
                android:layout_height="26dip" />
            <TextView
                android:text="05:00 多云"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="10dip"
        android:background="@color/hard_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/topDaysInfoLayout"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </LinearLayout>
        <View
            android:background="@color/light_gray"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <LinearLayout
            android:id="@+id/bottomDayInfoLayout"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</ScrollView>