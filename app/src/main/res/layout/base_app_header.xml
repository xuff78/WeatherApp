<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/app_header_layout_value"
    android:layout_width="fill_parent"
    android:layout_height="45dip"
    android:background="#1874CD"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/app_titleLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/app_back_imagebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dip"
            android:background="@null"
            android:src="@drawable/icon_app_back"
             />

        <TextView
            android:id="@+id/app_header_title_tv"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <ImageButton
            android:id="@+id/app_home_imagebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dip"
            android:background="@null" />

        <ImageButton
            android:layout_toLeftOf="@+id/app_home_imagebtn"
            android:id="@+id/app_right_imagebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:padding="15dip"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>